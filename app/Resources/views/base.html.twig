<!DOCTYPE html>
<html>
<head>
    <title>{% block page_title %}Wine'ot{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    <!-- Bootstrap -->
    <link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet" media="screen">
    {% stylesheets
    'css/bootstrap.css'
    'bundles/bmatznerfontawesome/css/font-awesome.min.css'
    '%kernel.root_dir%/Resources/css/*'
    filter='cssrewrite' %}
    <link href="{{ asset_url }}" rel="stylesheet" media="screen"/>
    {% endstylesheets %}

    <!-- HTML5 Shim and Respond.js add IE8 support of HTML5 elements and media queries -->
    {% include 'BraincraftedBootstrapBundle::ie8-support.html.twig' %}

</head>

<body>
<div id="page" class="site">
    <header class="site-header" role="banner">
        <div class="container">
            {% include 'navbar.html.twig' %}
            {% include 'search.html.twig' %}
        </div>
    </header>

    <div id="features" class="site-hero clearfix">
        <div class="container">
            <br/>
            <br/>
            <br/>
            <br/>
        </div>
    </div>
    <!-- .site-hero -->

    <div id="main" class="site-main clearfix">
        <div class="container">

            <div class="content-area">
                <div class="row">

                    <div id="content" class="site-content col-md-12">
                        <div class="row">
                            {% block body %}
                            {% endblock %}

                            {#<div id="sidebar" class="site-sidebar col-md-3">#}
                                {#azefzaf#}
                                {#{% block sidebar %}#}
                                {#{% endblock %}#}
                            {#</div>#}
                            <!-- #sidebar -->

                        </div>
                    </div>
                    <!-- .content-area -->

                </div>
            </div>
        </div>
    </div>
    <!-- #main -->

        {% include 'footer.html.twig' %}
    </div>

    {% block javascripts %}{% endblock %}
    <!-- jQuery (necessary for Bootstraps JavaScript plugins) -->
    <script src="{{ asset('js/jquery.js') }}"></script>
    <!-- Include all JavaScripts, compiled by Assetic -->
    <script src="{{ asset('js/bootstrap.js') }}"></script>
    <script>(function($) {
            /*-----------------------------------------------------------------------------------*/
            /*	Main Search
             /*-----------------------------------------------------------------------------------*/
            $('#header-search .search-field').on('focus', function() {
                $('#header-search .search-advance-button').fadeIn()
                $('#header-search .search-advance').slideDown()
            })
            $('#header-search .search-advance-button').on('click', function(e) {
                e.preventDefault()
                $(this).fadeOut(100)
                $('#header-search .search-advance').slideUp(100)
            })

        })(jQuery);</script>
</body>
</html>
