<!DOCTYPE html>
<html>
{% include 'header.html.twig' %}
<body>
<div id="page" class="site">
    {% include 'UtilsNotifyMessengerBundle::flash.html.twig' %}
    <header class="site-header" role="banner">
        <div class="container">
            {% include 'frontend/navbar.html.twig' %}
            {% if search_active is not defined %}
                {% include 'frontend/search.html.twig' %}
            {% endif %}
        </div>
    </header>

    {% if sitehero_active is not defined %}
        <div class="site-hero clearfix">
            <div class="container">
                {{ block('featured') }}
            </div>
        </div><!-- .site-hero -->
    {% endif %}


    <div id="main" class="site-main clearfix">
        <div class="container">

            <div class="content-area">
                <div class="row">

                    {% if block('sidebar') is not empty %}
                        <div id="sidebar" class="site-sidebar col-md-3">
                            <div class="widget-area">
                                {{ block('sidebar') }}
                            </div>
                        </div>
                        <div id="content" class="site-content col-md-9">
                            <div class="row">
                                {#{% include 'BraincraftedBootstrapBundle::flash.html.twig' with { 'close': false } %}#}
                                {{  block('body') }}
                            </div>
                        </div>
                    {% elseif block('sidebar_right') is not empty %}
                        <div id="content" class="site-content col-md-9" style="border-right: solid 2px #f2f2f2;">
                            <div class="row">
                                {#{% include 'BraincraftedBootstrapBundle::flash.html.twig' with { 'close': false } %}#}
                                {{  block('body') }}
                            </div>
                        </div>
                        <div id="sidebar" class="site-sidebar col-md-3">
                            <div class="widget-area">
                                {{ block('sidebar_right') }}
                            </div>
                        </div>
                    {% else %}
                        <div id="content" class="site-content col-md-12">
                            <div class="row">
                                {% include 'BraincraftedBootstrapBundle::flash.html.twig' with { 'close': false } %}
                                {{  block('body') }}
                            </div>
                        </div>
                    {% endif %}

                </div>
            </div>
        </div>
    </div>
    <!-- #main -->

    <div class="clearfix">
        <div class="container">
            {{ block('featured_bottom') }}
        </div>
    </div>
    <!-- .site-hero -->

    {% include 'footer.html.twig' %}
</div>
</body>
</html>
