{% if is_granted('ROLE_WINERY_ADMIN') %}
    <div class="col-sm-12">
        <h3 class="section-title clearfix"><i class="line"></i>
            Vos domaines
        </h3>

        <div class="row">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>{{ 'winery.form.name'|trans }}</th>
                    <th>{{ 'winery.form.localisation'|trans }}</th>
                    <th>{{ 'winery.form.wines'|trans }}</th>
                    <th class="btn-table"></th>
                </tr>
                </thead>
                <tbody>
                {% for winery in ownings %}
                    <tr>
                        <td>{{ winery.name }}</td>
                        <td>
                            {% if winery.region.name is defined %}
                                {{ winery.region.name }} Â· {{ winery.country.name }}
                            {% endif %}
                        </td>
                        <td>{{ winery.wines|length }}</td>
                        <td class="tooltips">
                            <a href="{{ path('wineot_front_end_winery_edit', { 'wineryName':winery.name|replace({' ':'-'}), 'wineryId': winery.id }) }}"
                               class="btn btn-sm btn-blue btn-block" data-toggle="tooltip"
                               data-placement="top" data-original-title="Edit">
                                <i class="fa fa-pencil"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endif %}