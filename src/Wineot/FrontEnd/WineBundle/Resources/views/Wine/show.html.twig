{% extends "WineotFrontEndSearchBundle::layout.html.twig" %}
{% block body %}
                <div class="wine-thumbnail">
                    <article>
                        <div class="wine-thumbnail-img col-xs-5">
                            <a href="#">
                                <img class="img-responsive" src="{{ asset('img/image.png') }}"/>

                                <div class="img-background"></div>
                            </a>
                        </div>
                        <div class="wine-thumbnail-body col-xs-7">
                            <h2>{{ wine.winery.name }}</h2>

                            <h1><a href="{{ path('wineot_front_end_wine_show', { 'wineryName':wine.winery.name, 'wineName':wine.name }) }}">{{ wine.name }}</a></h1>

                            <p><i class="fa fa-circle-o-notch wine-color-{{ wine.color}}"></i> {{ wine.color|wineColor }}</p>
                        </div>
                        <div class="wine-thumbnail-footer">
                            <div class="wine-thumbnail-key">
                                <i class="fa fa-comments"></i>
                                {{ wine.comments|length }}
                            </div>
                            <div class="wine-thumbnail-key">
                                <i class="fa fa-star"></i>
                                0
                            </div>
                            <div class="wine-thumbnail-key">
                                <i class="fa fa-tag"></i>
                                6 â‚¬
                            </div>
                        </div>

                    </article>
                </div>
{% endblock %}