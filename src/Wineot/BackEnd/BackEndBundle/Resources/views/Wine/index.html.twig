{% extends 'WineotBackEndBackEndBundle::layout.html.twig' %}
{% block body %}
    <table class="table table-hover">
        <thead>
        <tr>
            <th>{{ 'wine.form.winery'|trans }}</th>
            <th>{{ 'wine.form.name'|trans }}</th>
            <th>{{ 'wine.form.vintages'|trans }}</th>
            <th>{{ 'wine.form.color'|trans }}</th>
            <th class="btn-table"></th>
        </tr>
        </thead>
        <tbody>
        {% for wine in wines %}
            <tr>
                <td>
                    {% if wine.winery.name is defined %}
                        {{ wine.winery.name }}
                    {% endif %}
                </td>
                <td>
                    {{ wine.name }}
                </td>
                <td>
                    {{ wine.vintages|length }}
                </td>
                <td>{{ wine.color|wineColor(true) }}</td>
                <td class="tooltips">
                    <a href="{{ path('wineot_back_end_admin_wine_validate', { 'id': wine.id }) }}"
                       class="btn btn-sm btn-green btn-block" data-toggle="tooltip"
                       data-placement="top" data-original-title="Validate">
                        <i class="fa fa-check"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}