{% extends 'WineotBackEndCRUDBundle::layout.html.twig' %}
{% set menu_selected = 'admin' %}
{% block body %}
    <div class="col-sm-12">
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Name</th>
            <th class="btn-table"></th>
            <th class="btn-table"></th>
        </tr>
        </thead>
        <tbody>
        {% for grappe in grappes %}
            <tr>
                <td>
                        {{ grappe.name  }}
                </td>
                <td class="tooltips">
                    <a href="{{ path('wineot_back_end_crud_grappe_edit', { 'id': grappe.id }) }}"
                       class="btn btn-sm btn-blue btn-block" data-toggle="tooltip"
                       data-placement="top" data-original-title="Edit">
                        <i class="fa fa-pencil"></i>
                    </a>
                </td>
                <td class="tooltips">
                    <a href="{{ path('wineot_back_end_crud_grappe_delete', { 'id': grappe.id }) }}"
                       class="btn btn-sm btn-red btn-block" data-toggle="tooltip"
                       data-placement="top" data-original-title="Delete" onclick="return confirm('Delete ?')">
                        <i class="fa fa-times"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-lg btn-block" href="{{ path('wineot_back_end_crud_grappe_add') }}">add</a>
</div>
{% endblock %}