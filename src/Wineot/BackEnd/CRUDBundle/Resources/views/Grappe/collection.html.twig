<table class="table col-lg-6">
    <thead>
    <tr>
        <th>{{ 'wine.form.grappes'|trans }}</th>
        <th class="btn-table"></th>
    </tr>
    </thead>

    {% macro tagCollectionItem(formData) %}
        <td>{{ form_widget(formData.grappe) }}</td>
        <td class="tooltip-content collection-delete"></td>
        <td class="hidden">form_widget(formData)</td>
    {% endmacro %}
    <tbody class="collection-table" data-prototype="{{ _self.tagCollectionItem(form.grappes.vars.prototype)|e }}">
    {% for grappe in form.grappes %}
        <tr>
            {{ _self.tagCollectionItem(grappe) }}
        </tr>
    {% endfor %}
    </tbody>
</table>