{{ form_start(form) }}
        {% if errors  is defined %}
            {% for error in errors %}
                <div class="alert alert-danger"><i class="fa fa-warning"></i> {{ error.message|trans }}</div>
            {% endfor %}
        {% endif %}
<fieldset>
    <div class="form-group">
        <label class="sr-only" for="name">Name</label>
        {{ form_widget(form.name, { 'attr': { 'placeholder': 'name'|trans } } ) }}
    </div>
    <div class="form-group">
        <label class="sr-only" for="country">Country</label>
        {{ form_widget(form.country, { 'attr': { 'placeholder': 'country'|trans } } ) }}
    </div>
    <div class="form-group">
        <label class="sr-only" for="region">Region</label>
        {{ form_widget(form.region, { 'attr': { 'placeholder': 'region'|trans } } ) }}
    </div>
    <div class="form-group">
        {% if  winery.coverPicture.md5 is defined %}
            <img class="img-responsive" src="{{ winery.coverPicture.getImage() }}" width="200px">
        {% endif %}
        {{ form_widget(form.coverPicture) }}
    </div>
    <br>
    <input class="btn btn-lg  btn-block" type="submit" id="_submit" name="submit_wine"
           value="{{ 'submit'|trans }}"/>
</fieldset>
<br>
{{ form_end(form) }}