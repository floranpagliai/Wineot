<table class="table col-lg-6">
    <thead>
    <tr>
        <th>{{ 'global.vintage.form.name'|trans }}</th>
        <th>{{ 'global.vintage.form.keeping'|trans }}</th>
        <th>{{ 'global.vintage.form.peak'|trans }}</th>
        <th>{{ 'global.vintage.form.alcohol'|trans }}</th>
        <th>{{ 'global.vintage.form.isBio'|trans }}</th>
        <th>{{ 'global.vintage.form.containsSulphites'|trans }}</th>
        <th>{{ 'global.vintage.form.domain_price'|trans }}</th>
        <th class="btn-table"></th>
    </tr>
    </thead>

    {% macro tagCollectionItem(formData) %}
        <td>{{ form_widget(formData.productionYear) }}</td>
        <td>{{ form_widget(formData.keeping) }}</td>
        <td>{{ form_widget(formData.peak) }}</td>
        <td>{{ form_widget(formData.alcohol) }}</td>
        <td>{{ form_widget(formData.isBio) }}</td>
        <td>{{ form_widget(formData.containsSulphites) }}</td>
        <td>{{ form_widget(formData.wineryPrice) }}</td>
        {#{% if  formData.labelPicture.md5 is defined %}#}
    {#<td><img class="img-responsive" src="{{ formData.labelPicture.getImage() }}" width="200px"></td>#}
        {#{% else %}#}
    {#<td>{{ form_widget(formData.labelPicture) }}</td>#}
    {#{% endif %}#}
            <td class="hidden">form_widget(formData)</td>
    {% endmacro %}
    <tbody class="collection" data-prototype="{{ _self.tagCollectionItem(form.vintages.vars.prototype)|e }}">
    {% for vintage in form.vintages %}
        <tr>
            {{ _self.tagCollectionItem(vintage) }}
        </tr>
    {% endfor %}
    </tbody>
</table>

{#{% block page_script %}#}
{#{{ parent() }}#}
{#{% endblock %}#}