{% extends 'WineotBackEndCRUDBundle::layout.html.twig' %}
{% set menu_selected = 'admin' %}
{% block body %}
    <div class="col-sm-12">
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Role</th>
            <th class="btn-table"></th>
            <th class="btn-table"></th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>
                    <b>{{ user.username }}</b><br/>
                    {{ user.firstname }} {{ user.lastname }}
                </td>
                <td>{{ user.mail }}</td>
                <td>
                    {% for role in user.roles %}
                        {{ role }}<br/>
                    {% endfor %}
                </td>
                <td class="tooltips">
                    <a href="{{ path('wineot_back_end_crud_user_edit', { 'id': user.id }) }}"
                       class="btn btn-sm btn-blue btn-block" data-toggle="tooltip"
                       data-placement="top" data-original-title="Edit">
                        <i class="fa fa-pencil"></i>
                    </a>
                </td>
                <td class="tooltips">
                    <a href="{{ path('wineot_back_end_crud_user_delete', { 'id': user.id }) }}"
                       class="btn btn-sm btn-red btn-block" data-toggle="tooltip"
                       data-placement="top" data-original-title="Delete" onclick="return confirm('Delete ?')">
                        <i class="fa fa-times"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
{% endblock %}