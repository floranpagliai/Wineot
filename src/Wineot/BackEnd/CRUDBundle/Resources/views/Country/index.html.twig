{% extends 'WineotBackEndCRUDBundle::layout.html.twig' %}
{% set menu_selected = 'admin' %}
{% block body %}
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Name</th>
            <th>Code</th>
            <th>Regions</th>
            <th class="btn-table"></th>
            <th class="btn-table"></th>
        </tr>
        </thead>
        <tbody>
        {% for country in countries %}
            <tr>
                <td>
                    {{ country.name }}<br/>
                </td>
                <td>
                    <i class="country-flag flag-{{ country.code }}"></i>
                    {{ country.code }}<br/>
                </td>
                <td>
                    {{ country.regions|length }}<br/>
                </td>
                <td class="tooltips">
                    <a href="{{ path('wineot_back_end_crud_country_edit', { 'id': country.id }) }}"
                       class="btn btn-sm btn-blue btn-block" data-toggle="tooltip"
                       data-placement="top" data-original-title="Edit">
                        <i class="fa fa-pencil"></i>
                    </a>
                </td>
                <td class="tooltips">
                    <a href="{{ path('wineot_back_end_crud_country_delete', { 'id': country.id }) }}"
                       class="btn btn-sm btn-red btn-block" data-toggle="tooltip"
                       data-placement="top" data-original-title="Delete" onclick="return confirm('Delete ?')">
                        <i class="fa fa-times"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-lg btn-block" href="{{ path('wineot_back_end_crud_country_add') }}">add</a>

{% endblock %}