{% extends 'WineotBackEndCRUDBundle::layout.html.twig' %}
{% set menu_selected = 'admin' %}
{% block body %}
    <div class="col-sm-12">
    <table class="table table-hover">
        <thead>
        <tr>
            <th>{{ 'comment.form.label.user'|trans }}</th>
            <th>{{ 'comment.form.label.wine'|trans }}</th>
            <th>{{ 'comment.form.label.comment'|trans }}</th>
            <th>{{ 'comment.form.label.rank'|trans }}</th>
            <th class="btn-table"></th>
        </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>
                    <b>{{ user.username }}</b><br/>
                    {{ user.firstname }} {{ user.lastname }}
                </td>
                <td>
                    {% if comment.wine.name is defined %}
                        {{ comment.wine.name }}
                    {% endif %}
                </td>
                <td>
                    {{ comment.comment }}
                </td>
                <td>
                    {{ comment.rank }}
                </td>
                <td class="tooltips">
                    <a href="{{ path('wineot_back_end_crud_comment_delete', { 'id': comment.id }) }}"
                       class="btn btn-sm btn-red btn-block" data-toggle="tooltip"
                       data-placement="top" data-original-title="{{ 'comment.action.delete'|trans }}" onclick="return confirm('Delete ?')">
                        <i class="fa fa-times"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
{% endblock %}