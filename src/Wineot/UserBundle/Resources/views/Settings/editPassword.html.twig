{% extends 'WineotUserBundle:Settings:layout.html.twig' %}
{% block body %}
    {{ form_start(form) }}
    {% if errors  is defined %}
        {% for error in errors %}
            <div class="alert alert-danger"><i class="fa fa-warning"></i> {{ error.message|trans }}</div>
        {% endfor %}
    {% endif %}
    <fieldset>
        <h2 class="section-title clearfix"><i class="line"></i>
            {{ 'user.title.change_password'|trans }}
        </h2>

        <div class="form-group">
            <label for="password">{{ 'user.form.password'|trans }}</label>
            {{ form_widget(form.plain_password.first, { 'attr': { 'placeholder': 'user.form.password'|trans } } ) }}
        </div>
        <div class="form-group">
            <label for="password">{{ 'user.form.password_validation'|trans }}</label>
            {{ form_widget(form.plain_password.second, { 'attr': { 'placeholder': 'user.form.password_validation'|trans } } ) }}
        </div>
    </fieldset>
    <input class="btn btn-lg btn-block" type="submit" id="_submit" name="submit_user_edit_password"
           value="{{ 'user.action.save'|trans }}"/>
    {{ form_end(form) }}
{% endblock %}