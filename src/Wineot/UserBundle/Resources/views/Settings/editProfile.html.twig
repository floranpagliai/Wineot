{% extends 'WineotUserBundle:Settings:layout.html.twig' %}
{% block body %}
    <div class="col-sm-12">
        {{ form_start(form) }}
        {% if errors  is defined %}
            {% for error in errors %}
                <div class="alert alert-danger"><i class="fa fa-warning"></i> {{ error.message|trans }}</div>
            {% endfor %}
        {% endif %}
        <fieldset>
            <h2 class="section-title clearfix"><i class="line"></i>
                {{ 'user.title.my_informations'|trans }}
            </h2>

            <div class="form-group">
                <label for="username">{{ 'user.form.label.username'|trans }}</label>
                {{ form_row(form.username) }}
            </div>
            <div class="form-group">
                <label for="firstname">{{ 'user.form.label.firstname'|trans }}</label>
                {{ form_row(form.firstname) }}
            </div>
            <div class="form-group">
                <label for="lastname">{{ 'user.form.label.lastname'|trans }}</label>
                {{ form_row(form.lastname) }}
            </div>
        </fieldset>
        <input class="btn btn-lg btn-block" type="submit" id="_submit" name="submit_user_register"
               value="{{ 'global.action.save'|trans }}"/>
        {{ form_end(form) }}
    </div>
{% endblock %}