{% extends 'WineotUserBundle::layout.html.twig' %}
{% set menu_selected = 'register' %}
{% set page_title = 'user.action.register' %}
{% block body %}
    <div class="col-lg-4 col-lg-offset-4">
        <h2 class="section-title clearfix"><i class="line"></i>
            {{ 'user.title.register'|trans }}
        </h2>
        {{ form_start(form) }}
        {% if errors  is defined %}
            {% for error in errors %}
                <div class="alert alert-danger"><i class="fa fa-warning"></i> {{ error.message|trans }}</div>
            {% endfor %}
        {% endif %}
        <fieldset>
            <div class="form-group">
                <label class="sr-only" for="username">Username</label>
                {{ form_widget(form.username, { 'attr': { 'placeholder': 'user.form.placeholder.username'|trans } } ) }}
            </div>
            <div class="form-group">
                <label class="sr-only" for="firstname">Firstname</label>
                {{ form_widget(form.firstname, { 'attr': { 'placeholder': 'user.form.placeholder.firstname'|trans } } ) }}
            </div>
            <div class="form-group">
                <label class="sr-only" for="lastname">Lastname</label>
                {{ form_widget(form.lastname, { 'attr': { 'placeholder': 'user.form.placeholder.lastname'|trans } } ) }}
            </div>
            <div class="form-group">
                <label class="sr-only" for="email">Email</label>
                {{ form_widget(form.mail, { 'attr': { 'placeholder': 'user.form.placeholder.email'|trans } } ) }}
            </div>
            <div class="form-group">
                <label class="sr-only" for="password">Password</label>
                {{ form_widget(form.plain_password.first, { 'attr': { 'placeholder': 'user.form.placeholder.password'|trans } } ) }}
            </div>
            <div class="form-group">
                <label class="sr-only" for="password">Password</label>
                {{ form_widget(form.plain_password.second, { 'attr': { 'placeholder': 'user.form.placeholder.password_validation'|trans } } ) }}
            </div>
            <br>
            <input class="btn btn-lg btn-block" type="submit" id="_submit" name="submit_user_register"
                   value="{{ 'user.action.register'|trans }}"/>
        </fieldset>
        <br>

        {{ form_end(form) }}
    </div>
{% endblock %}