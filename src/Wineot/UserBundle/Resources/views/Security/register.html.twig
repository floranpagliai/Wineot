{% extends 'WineotUserBundle::layout.html.twig' %}
{% set menu_selected = 'register' %}
{% set page_title = 'user.action.register' %}
{% block body %}
    <div class="col-lg-4 col-lg-offset-4">
        <h2 class="section-title clearfix"><i class="line"></i>
            {{ 'user.title.register'|trans }}
        </h2>
        {{ form_start(form) }}
        {% if errors  is defined %}
            {% for error in errors %}
                <div class="alert alert-danger"><i class="fa fa-warning"></i> {{ error.message|trans }}</div>
            {% endfor %}
        {% endif %}
        <fieldset>
            <div class="form-group">
                {{ form_row(form.username) }}
            </div>
            <div class="form-group">
                {{ form_row(form.firstname) }}
            </div>
            <div class="form-group">
                {{ form_row(form.lastname) }}
            </div>
            <div class="form-group">
                {{ form_row(form.plain_password.first) }}
            </div>
            <div class="form-group">
                {{ form_row(form.plain_password.second) }}
            </div>
            <br>
            <input class="btn btn-lg btn-block" type="submit" id="_submit" name="submit_user_register"
                   value="{{ 'user.action.register'|trans }}"/>
        </fieldset>
        <br>

        {{ form_end(form) }}
    </div>
{% endblock %}