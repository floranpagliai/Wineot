{% extends 'WineotUserBundle::layout.html.twig' %}
{% set menu_selected = 'login' %}
{% set page_title = 'user.action.login' %}
{% block body %}
    <div class="col-lg-4 col-lg-offset-4">
        <h2 class="section-title  clearfix"><i class="line"></i>
            {{ 'user.title.login'|trans }}
        </h2>
        {% if error %}
            <div class="alert alert-danger"><i class="fa fa-warning"></i> {{ error.message|trans }}</div>
        {% endif %}
        <form action="{{ path("wineot_user_login_check") }}" method="post">
            <fieldset>
                <div class="form-group">
                    <label class="sr-only" for="username">Username</label>
                    <input class="form-control" placeholder="{{ 'user.form.placeholder.username'|trans }}" type="text"
                           id="username" name="_username"
                           value="{{ last_username }}" required="required">
                </div>
                <div class="form-group">
                    <label class="sr-only" for="password">Password</label>
                    <input class="form-control" placeholder="{{ 'user.form.placeholder.password'|trans }}"
                           id="password" name="_password" type="password" value=""
                           required="required">
                </div>
                <div class="checkbox">
                    <label>
                        <input type="checkbox" id="remember_me" name="_remember_me"
                               value="on">{{ 'user.action.remember_me'|trans }}
                    </label>
                </div>
                <br>
                <input class="btn btn-lg btn-block" type="submit" id="_submit" name="_submit"
                       value="{{ 'user.action.login'|trans }}"/>
            </fieldset>
            <br>
            <p style="text-align: center;">
                <a href="{{ path('wineot_user_profile_reset_password') }}">{{ 'user.description.forget_password'|trans }}</a>
            </p>
        </form>
    </div>
{% endblock %}